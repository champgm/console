<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1"
         id="hue-web"
         metadata-complete="true">
  <display-name>hue-web</display-name>
  <!--<welcome-file-list>-->
  <!--<welcome-file>index.html</welcome-file>-->
  <!--<welcome-file>index.htm</welcome-file>-->
  <!--<welcome-file>index.jsp</welcome-file>-->
  <!--<welcome-file>default.html</welcome-file>-->
  <!--<welcome-file>default.htm</welcome-file>-->
  <!--<welcome-file>default.jsp</welcome-file>-->
  <!--</welcome-file-list>-->
  <servlet>
    <servlet-name>GetLights</servlet-name>
    <servlet-class>com.cgm.java.hue.web.GetLights</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>GetLights</servlet-name>
    <url-pattern>/getlights/*</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>GetScenes</servlet-name>
    <servlet-class>com.cgm.java.hue.web.GetScenes</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>GetScenes</servlet-name>
    <url-pattern>/getscenes/*</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>GetGroups</servlet-name>
    <servlet-class>com.cgm.java.hue.web.GetGroups</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>GetGroups</servlet-name>
    <url-pattern>/getgroups/*</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>ToggleLight</servlet-name>
    <servlet-class>com.cgm.java.hue.web.ToggleLight</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ToggleLight</servlet-name>
    <url-pattern>/togglelight/*</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>ActivateScene</servlet-name>
    <servlet-class>com.cgm.java.hue.web.ActivateScene</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ActivateScene</servlet-name>
    <url-pattern>/activatescene/*</url-pattern>
  </servlet-mapping>
</web-app>